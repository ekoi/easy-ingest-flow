            <groupId>nl.knaw.dans.easy</groupId>
            <artifactId>easy-update-solr-index</artifactId>
            <version>1.x-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jgit</groupId>
